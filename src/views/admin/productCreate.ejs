<!DOCTYPE html>
<html lang="es">

<%- include('../partials/head') %>

    <body>
        <!-- header section starts -->
        <%- include('../partials/header') %>
            <!-- header section ends -->
            <main class="productForm">
                <h3 class="title">Create product</h3>
                <form action="/admin/product" method="POST" enctype="multipart/form-data">

                    <select name="category" id="">
                        <option value="" selected hidden>Seleccione una categoria</option>
                        <option value="1">Cafe en grano</option>
                        <option value="2">Cafe Molido</option>
                    </select>
                    <span class="error">Error ingrese algo</span>

                    <select name="subcategory" id="">
                        <option value="" selected hidden>Seleccione una subcategoria</option>
                        <option value="premium">Premium</option>
                        <option value="especiales">Especiales</option>
                        <option value="original">Original</option>
                    </select>
                    <span class="error">Error ingrese algo</span>

                    <p class="title-input">Name product</p>
                    <input type="text" name="name" placeholder="Ingrese el nombre del producto">
                    <span class="error">Error ingrese algo</span>

                    <p class="title-input">Description</p>
                    <textarea name="description" placeholder="Ingrese la desripcion del producto" id="" cols="30"
                        rows="10"></textarea>
                    <span>Error ingrese algo</span>

                    <p class="title-input">Price</p>
                    <input type="number" name="price" placeholder="Ingrese el precio del producto">
                    <span class="error">Error ingrese algo</span>

                    <p class="title-input">Discount</p>
                    <input type="number" name="discount" placeholder="Ingrese el descuento">
                    <span class="error">Error ingrese algo</span>
                    <!--<input type="number" name="" placeholder="Ingrese el stock del producto">-->

                    <div id="variants_product" class="variant_product"></div>
                    <button id="agregar" class="agregar">+ colors</button>

                    <template id="template_variant">
                        <div class="container">

                            <label for="color">Select color : </label>
                            <input type="color" name="color[]" id="inputColor" class="h-10">

                            <div class="x">

                                <label class="">Sizes - Stock/Quantity</label>
                                <div>
                                    <b>S : </b>
                                    <input type="number" name="stockS[]" value="0" placeholder="stock/cantidad"
                                        class="">
                                </div>
                                <div>
                                    <b>M : </b>
                                    <input type="number" name="stockM[]" value="0" placeholder="stock/cantidad"
                                        class="">
                                </div>

                                <div>
                                    <b>L : </b>
                                    <input type="number" name="stockL[]" value="0" placeholder="stock/cantidad"
                                        class="">
                                </div>
                                <div>
                                    <b>XL : </b>
                                    <input type="number" name="stockXL[]" value="0" placeholder="stock/cantidad"
                                        class="">
                                </div>
                            </div>
                            <div class="container-file">
                                <i class="fas fa-upload"></i>
                                <p>Ingrese una Imagen</p>
                                <input type="file" name="img" id="" multiple>
                            </div>
                            <span class="error">Error ingrese algo</span>
                            <!--<span class="eliminar">eliminar</span>-->
                            <!--<input type="file" name="image">-->
                            <i class="fas fa-minus-circle btn_eliminar"></i>
                        </div>
                    </template>
                    <!--
            <div class="container-file">
                <i class="fas fa-upload"></i>
                <p>Ingrese una Imagen</p>
                <input type="file" name="img" id="" multiple>
            </div>
            <span class="error">Error ingrese algo</span>
            -->
                    <button type="submit">Guardar</button>
                </form>
            </main>
            <script src="/js/productCreate.js"></script>
    </body>

</html>